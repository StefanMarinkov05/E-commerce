@model ArtFusionStudio.Models.Brand

@{
    ViewData["Title"] = "Изтрий";
}

<h1>Изтрий</h1>

<h3>Сигурен ли си че искаш да изтриеш @Model.Name?</h3>
<div>
    <h4>Бранд</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Име
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Лого
        </dt>
        <dd class = "col-sm-10">
            <svg xmlns="http://www.w3.org/2000/svg" height="4vh" viewBox="0 0 24 24">
                <path fill="#ffffff" d="@Model.PathD" />
            </svg>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Изтрий" class="btn btn-danger" /> |
        <a asp-action="Index">Върни се към списъка</a>
    </form>
</div>
