@model ArtFusionStudio.Models.ProductFeatures.PhoneFeatures.OSNameAndVersion

@{
    ViewData["Title"] = "Добави";
}

<h1>Създай</h1>

<h4>Операционна система</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OSNameId" class="control-label">Име на ОС</label>
                <select asp-for="OSNameId" class ="form-control" asp-items="ViewBag.OSNameId"></select>
            </div>
            <div class="form-group">
                <label asp-for="OSVersionId" class="control-label">Версия на ОС</label>
                <select asp-for="OSVersionId" class ="form-control" asp-items="ViewBag.OSVersionId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Създай" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Върни се към списъка</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
